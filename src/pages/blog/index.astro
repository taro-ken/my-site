---
import Base from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
const posts = await Astro.glob("./*.mdx");
---
<Base title="Blog | KENTARO">
  <Header />
  <main class="mx-auto max-w-3xl px-4 py-10">
    <h1 class="text-2xl font-bold mb-6">Blog</h1>
    <ul class="grid gap-4">
      {posts.sort((a,b)=>new Date(b.frontmatter.pubDate)-new Date(a.frontmatter.pubDate)).map(p => (
        <li>
          <a class="underline" href={p.url}>{p.frontmatter.title}</a>
          <p class="text-sm text-gray-600">{p.frontmatter.description}</p>
        </li>
      ))}
    </ul>
  </main>
</Base>

