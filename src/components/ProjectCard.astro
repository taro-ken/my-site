---
const { title, description, tags = [], link, image = "/og-cover.jpg", role } = Astro.props;
---
<article class="group rounded-2xl border p-4 hover:shadow-md transition">
  <img src={image} alt={title} class="aspect-[16/9] w-full rounded-lg object-cover mb-3" loading="lazy" />
  <h3 class="text-lg font-semibold mb-1">{title}</h3>
  {role && <p class="text-xs text-gray-500 mb-1">{role}</p>}
  <p class="text-sm text-gray-700 mb-3">{description}</p>
  <div class="flex flex-wrap gap-2 mb-3">
    {tags.map(t => <span class="text-xs rounded-full border px-2 py-0.5">{t}</span>)}
  </div>
  {link && <a href={link} class="text-sm underline">View â†’</a>}
</article>
