---
const { href = '#', ariaLabel = 'Download on the App Store' } = Astro.props;
---
<a href={href} aria-label={ariaLabel} class="inline-flex no-underline">
  <div class="badge">
    <svg viewBox="0 0 24 24" aria-hidden="true" class="apple">
      <path fill="currentColor" d="M16.365 12.49c-.03-3.012 2.463-4.46 2.575-4.53-1.4-2.05-3.58-2.33-4.356-2.36-1.856-.19-3.62 1.1-4.56 1.1-.96 0-2.4-1.08-3.95-1.05-2.03.03-3.92 1.18-4.97 3-2.12 3.68-.54 9.1 1.52 12.08 1.01 1.46 2.2 3.1 3.78 3.04 1.52-.06 2.1-.98 3.95-.98 1.83 0 2.37.98 3.97.94 1.65-.03 2.7-1.49 3.7-2.96 1.16-1.7 1.64-3.35 1.66-3.44-.04-.02-3.19-1.22-3.31-4.8zM13.6 3.87C14.38 2.92 14.91 1.6 14.77.3c-1.12.05-2.47.75-3.26 1.69-.72.83-1.34 2.13-1.17 3.38 1.24.1 2.5-.63 3.26-1.5z"/>
    </svg>
    <div class="text">
      <span class="small">Download on the</span>
      <span class="big">App Store</span>
    </div>
  </div>
</a>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #000;
    color: #fff;
    height: 40px;
    padding: 0 14px;
    border-radius: 12px;
  }
  .apple {
    width: 22px;
    height: 22px;
  }
  .text { display: grid; line-height: 1; }
  .small { font-size: 11px; opacity: .9; }
  .big { font-size: 18px; font-weight: 600; letter-spacing: .2px; }
  @media (min-width: 768px){
    .badge{ height: 46px; padding: 0 16px; border-radius: 14px; }
    .apple{ width: 24px; height: 24px; }
    .small{ font-size: 12px; }
    .big{ font-size: 20px; font-weight: 600; }
  }
</style> 
